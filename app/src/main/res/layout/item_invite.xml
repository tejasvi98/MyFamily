<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8">

    <ImageView
        android:id="@+id/iv_user_contact_img"
        android:layout_width="@dimen/dimen_64"
        android:layout_height="@dimen/dimen_64"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcd"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/dimen_16_sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_contact_img"
        app:layout_constraintStart_toStartOf="@+id/iv_user_contact_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_contact_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_rectangle"
        android:padding="@dimen/dimen_4"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_contact_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_name">

        <TextView
            android:id="@+id/tv_invite_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVITE"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>